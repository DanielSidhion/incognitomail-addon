{
  "manifest_version": 2,
  "name": "Incognito Mail",
  "version": "1.1",

  "description": "Generates a new Incognito Mail for you",

  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "57": "icons/57.png",
    "64": "icons/64.png",
    "96": "icons/96.png",
    "114": "icons/114.png"
  },

  "content_scripts": [
  ],

  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "New Incognito Mail",
    "default_popup": "popup/clipboard.html",
    "browser_style": true
  },

  "applications": {
    "gecko": {
      "id": "incognito-mail@sidhion.com"
    }
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "storage",
    "clipboardWrite"
  ]
}
